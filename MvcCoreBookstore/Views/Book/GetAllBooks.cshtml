@*@model IEnumerable<BookModel>*@

@{
    ViewData["Title"] = "GetAllBooks";
}



<div class="container">
    <h3 class="display-4">All Books</h3>
    <div class="row">
        @foreach (var book in Model)
        {
            string Img = book.CoverImageUrl;
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="bd-placeholder-img card-img-top img-fluid" width="100%" height="225" src="/@Img"/>
                    <div class="card-body">
                        <h3>@book.Title</h3>
                        <p class="card-text" style="overflow:hidden; text-overflow: ellipsis; white-space: nowrap;">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Book" asp-action="GetBook" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

