@model BookModel;

@{
    ViewData["Title"] = "GetBook";

    int imageCount = 0;
    int imageCountForCover = 0;
}

<div class="container">
    <h3 class="display-4">Book Details</h3>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">

                    @foreach (var image in Model.GalleryImgs)
                    {
                        if (imageCount == 0)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@imageCount"></li>
                        }
                        imageCount++;
                    }
                    
                </ol>
                <div class="carousel-inner">
                    
                    @foreach (var image in Model.GalleryImgs)
                    {
                        
                        if (imageCountForCover == 0)
                        {
                            <div class="carousel-item active">
                                <img src="/@image.URL" class="d-block w-100" alt="...">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="/@image.URL" class="d-block w-100" alt="...">
                            </div>
                        }
                        imageCountForCover++;
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Html.DisplayFor(modelItem => Model.Title)</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-primary">By: </span>
                    <span class="text-monospace">@Html.DisplayFor(modelItem => Model.Author)</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        @Html.DisplayFor(modelItem => Model.Description)
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <a href="/@Model.PDFUrl" class="btn btn-outline-primary">
                        Read Now
                    </a>
                </div>
               
            </div>

            <hr/>
            
            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Category - </span>@Model.Category</li>
                <li class="list-group-item"><span class="font-weight-bold">Total Pages - </span>@Model.Pages</li>
                <li class="list-group-item"><span class="font-weight-bold">Language - </span>@Model.Language</li>

            </ul>
        </div>
    </div>
</div>
